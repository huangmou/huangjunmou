<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#025D8C"
    android:orientation="vertical"
    tools:context="com.welink.myapp.activity.WeatherActivity">

    <RelativeLayout
        android:id="@+id/layhead"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/touming" >
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/common_icon_fanhui" />


        <TextView
            android:id="@+id/text_weather_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="切换城市"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_below="@+id/layhead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/text_weather_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:30"
            android:textColor="#fff"
            android:layout_marginTop="12dp"
            android:textSize="64sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/text_weather_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textSize="24sp"
            android:textColor="#fff"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_below="@+id/text_weather_time"
            android:layout_alignLeft="@+id/text_weather_time"
            android:layout_alignStart="@+id/text_weather_time" />
        <TextView
            android:id="@+id/text_weather_nongli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农历：六月初三"
            android:textColor="#fff"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/text_weather_adress"
            android:layout_alignLeft="@+id/text_weather_time"
            android:layout_alignStart="@+id/text_weather_time" />
        <TextView
            android:id="@+id/text_weather_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07-05"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/text_weather_adress"
            android:layout_alignStart="@+id/text_weather_adress" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_icon_tai"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/image_weather_today" />

        <TextView
            android:id="@+id/text_weather_tian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"
            android:text="晴"
            android:layout_below="@+id/text_weather_time"
            android:layout_alignRight="@+id/image_weather_today"
            android:layout_alignEnd="@+id/image_weather_today"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp" />
        <TextView
            android:id="@+id/text_weather_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"
            android:text="19℃"
            android:layout_below="@+id/text_weather_adress"
            android:layout_alignRight="@+id/image_weather_today"
            android:layout_alignEnd="@+id/image_weather_today"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/lin1"
        android:scrollbars="none"
        android:layout_below="@+id/re1"
        android:background="#25739C">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/re1"
        android:background="#25739C"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活指数："
            android:textSize="18sp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_chuanyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="穿衣指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_ganmao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感冒指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_kongtiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_wuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="污染指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_yundong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_ziwai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="紫外线指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        <TextView
            android:id="@+id/text_weather_xiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洗车指数："
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#fff"></TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:layout_below="@+id/lin1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_weather_data1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image_weather_tian1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_icon_tai"/>
            <TextView
                android:id="@+id/text_weather_wendu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15℃"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_weather_data2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image_weather_tian2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_icon_yu"/>
            <TextView
                android:id="@+id/text_weather_wendu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15℃"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_weather_data3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image_weather_tian3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_icon_xue"/>
            <TextView
                android:id="@+id/text_weather_wendu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15℃"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_weather_data4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image_weather_tian4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_icon_lei"/>
            <TextView
                android:id="@+id/text_weather_wendu4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15℃"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_weather_data5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image_weather_tian5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_icon_tai"/>
            <TextView
                android:id="@+id/text_weather_wendu5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15℃"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
